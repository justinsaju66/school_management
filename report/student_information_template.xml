<odoo>
    <template id="report_student">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="text-center">
                        <h1>Student Report</h1>
                    </div>
                    <h3>Student:</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Student Name</th>
                                <th>Class</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Club</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="std">
                                <tr>
                                    <td>
                                        <t t-esc="std['name']"/>
                                    </td>
                                    <td>
                                        <t t-esc="std['class_id']"/>
                                    </td>
                                    <td>
                                        <t t-esc="std['email']"/>
                                    </td>
                                    <td>
                                        <t t-esc="std['gender']"/>
                                    </td>
                                    <td>
                                        <t t-esc="std['club_ids']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
