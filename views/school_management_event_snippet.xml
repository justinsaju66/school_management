<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="school_management_event_snippet" name="School Event Snippet">

        <section class="oe_structure container dynamic_snippet_blog">

            <div class="row">

                <div class="col-md-12">

                    <div class="text-center py-5">

                        <h1 class="h1">School Event</h1>

                        <div class="h3" style="text-align:center">Latest School Event</div>

                        <div id="courosel">

                        </div>

                    </div>

                </div>

            </div>

        </section>
    </template>

    <template id="external_snippets" inherit_id="website.snippets" priority="8">
        <xpath expr="//snippets[@id='snippet_content']//t[@t-snippet][last()]" position="after">
            <t t-snippet="school_management.school_management_event_snippet"/>
        </xpath>
    </template>


</odoo>