<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="school_event_template" name="School Event">
        <section class="categories_section ">
            <div class="container">
                <div class="alert alert-info">
                    <h4>Your Category Highlight Tab snippet will be displayed here...
                        Please save to view the snippet
                    </h4>
                </div>
            </div>
        </section>
    </template>

    <template id="school_event_snippet" inherit_id="website.snippets"
              name="School Event Snippet">
        <xpath expr="//snippets[@id='snippet_groups']" position="inside">
            <t t-snippet="school_management.school_event_template"
              t-thumbnail="/school_management/static/src/img/snippets/s_speaker_bio.svg/"/>
        </xpath>
     </template>


</odoo>