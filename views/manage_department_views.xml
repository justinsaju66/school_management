<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="manage_department_form_view" model="ir.ui.view">
        <field name="name">manage.department.form.view</field>
        <field name="model">manage.department</field>
        <field name="arch" type="xml">
            <form class="student">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hod_id"/>
                    </group>
                    <chatter/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="manage_department_list_view" model="ir.ui.view">
        <field name="name">manage.department.list.view</field>
        <field name="model">manage.department</field>
        <field name="arch" type="xml">
            <list string="registration">
                <field name="name"/>
                <field name="hod_id"/>
            </list>
        </field>
    </record>
</odoo>